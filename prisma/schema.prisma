// Prisma schema for blog system
// Generated by GitHub Copilot coding agent

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id          String   @id @default(uuid())
  title       String
  slug        String   @unique
  description String
  content     String
  coverImage  String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  authorId    String?
  author      Author?  @relation(fields: [authorId], references: [id])
}

model Author {
  id        String   @id @default(uuid())
  name      String
  photo     String
  role      String
  bio       String
  social    String?  // Stored as JSON string
  posts     Post[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AdminUser {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model FacultyMember {
  id             String   @id @default(uuid())
  name           String
  role           String
  title          String?
  position       String?
  nidn           String?
  email          String?
  expertise      String?
  education      String[] @default([])
  specialization String?
  photo          String?
  social         Json?
  displayOrder   Int      @default(0)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([displayOrder, name])
}

model AlumniStory {
  id             String   @id @default(uuid())
  name           String
  role           String
  company        String?
  image          String?
  quote          String
  rating         Int      @default(5)
  tags           String[] @default([])
  graduationYear String
  displayOrder   Int      @default(0)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([displayOrder, graduationYear])
}

model CurriculumCourse {
  id           String   @id @default(uuid())
  semester     Int
  code         String
  name         String
  credits      Int
  description  String
  type         String
  displayOrder Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([semester, displayOrder])
}
